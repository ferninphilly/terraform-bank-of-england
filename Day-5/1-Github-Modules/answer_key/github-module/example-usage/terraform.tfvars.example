#     protocol                   = "Tcp"
#     source_port_range          = "*"
#     destination_port_range     = "22"
#     source_address_prefix      = "*"  # Restrict to specific IP range for security
#     destination_address_prefix = "*"
#   },
#   {
#     name                       = "AllowHTTPS"
#     priority                   = 1002
#     direction                  = "Inbound"
#     access                     = "Allow"
#     protocol                   = "Tcp"
#     source_port_range          = "*"
#     destination_port_range     = "443"
#     source_address_prefix      = "*"
#     destination_address_prefix = "*"
#   }
# ]

# Tags
tags = {
  Environment = "test"
  ManagedBy   = "Terraform"
  Module      = "GitHub"
  Project     = "Module-Testing"
}

